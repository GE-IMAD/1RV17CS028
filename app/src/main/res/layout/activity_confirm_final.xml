<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/items">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:textColor="@color/white"
            android:text="Confirm shipment Details"
            android:textSize="30dp"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:background="@drawable/roundedcorner"
            android:layout_marginTop="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_margin="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Your Name"
            android:id="@+id/shipment_name"
            android:background="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shipment_name"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:hint="Your Phone Number"
            android:id="@+id/shipment_phone_no"
            android:background="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shipment_phone_no"
            android:layout_marginTop="60dp"
            android:layout_margin="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Your Home Address"
            android:id="@+id/shipment_address"
            android:background="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shipment_address"
            android:layout_marginTop="60dp"
            android:layout_margin="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="City"
            android:id="@+id/shipment_city"
            android:background="@color/white"
            />
            </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:text="Confirm"
            android:background="@color/colorPrimary"
            android:id="@+id/shipment_confirm"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>